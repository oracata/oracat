<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.oracat.dao.UserDao">
<!--设置domain类和数据库中表的字段一一对应，注意数据库字段和domain类中的字段名称不致，此处一定要！-->
    <resultMap id="BaseResultMap" type="com.oracat.model.User">
        <id column="USER_ID" property="userId" jdbcType="INTEGER" />
        <result column="USER_NAME" property="userName" jdbcType="CHAR" />
        <result column="USER_PASSWORD" property="userPassword" jdbcType="CHAR" />
    </resultMap>
    <!-- 查询单条记录 -->
    <select id="selectUserById" parameterType="int" resultMap="BaseResultMap">
        SELECT * FROM t_user WHERE USER_ID = #{userId}
    </select>
</mapper>




<mapper namespace="com.oracat.dao.OverViewCatagoryDao">
 
    <resultMap id="OverViewCatagoryResultMap" type="com.oracat.model.OverViewCatagory">
        <result column="company" property="company" jdbcType="CHAR" />
        <result column="catagory" property=""catagory"" jdbcType="INTEGER" />
    </resultMap>
 
    <select id="selectOverViewCatagory" resultType="vendors">
      select '东昌' as company,count(*) as catagory from dc_puyao where date='2019-08-03'
      union all 
      select '云中' as  company,count(*) as  catagory from yz_puyao where date='2019-08-03'
    </select>
</mapper>